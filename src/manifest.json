{
    "manifest_version": 3,
    "name": "Full Page Screenshot",
    "version": "1.0.0",
    "description": "Capture entire webpage screenshots with ease",
    "permissions": [
      "activeTab", 
      "downloads", 
      "scripting"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "background": {
      "service_worker": "background.bundle.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.bundle.js"]
      }
    ],
    "icons": {
      "128": "icons/icon128.png"
    }
  }